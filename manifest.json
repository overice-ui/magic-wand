{
  "manifest_version": 3,
  "name": "Ovice UI美化",
  "version": "1.5",
  "options_page": "./options/options.html",
  "permissions": ["storage"],
  "icons": {
    "16": "public/icons/magic-wand16.png",
    "128": "public/icons/magic-wand128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://paylab-2f.ovice.in/*"],
      "js": ["ui.js"],
      "run_at": "document_end"
    }
  ],
  "host_permissions": [
    "*://paylab-2f.ovice.in/*"
  ]
}